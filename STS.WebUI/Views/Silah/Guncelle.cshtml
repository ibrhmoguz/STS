@model STS.Domain.Entities.Silah

@{
    ViewBag.Title = "Silah Bilgisi";
    ViewBag.Description = "Sistemde tanımlı silah bilgisi görüntülenir.";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Faal",
        Value = "Faal"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Arızalı",
        Value = "Arızalı",
    });
    listItems.Add(new SelectListItem
    {
        Text = "Bakımda",
        Value = "Bakımda"
    });
}

<script type="text/javascript">
    $('#datepicker').datepicker({
        autoclose: true
    });
</script>

@using (Html.BeginForm("Guncelle", "Silah", FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@Model.SilahNo</h3>
                </div>
                <form role="form">
                    <div class="box-body">
                        @Html.HiddenFor(m => m.SilahId)
                        @foreach (var property in ViewData.ModelMetadata.Properties)
                        {
                            switch (property.PropertyName)
                            {
                                case "SilahId":
                                case "KayitTarihi":
                                    // do nothing
                                    break;
                                case "Durumu":
                                    <div class="form-group">
                                        <label>@(property.DisplayName ?? property.PropertyName)</label>
                                        <br />
                                        @Html.DropDownListFor(model => model.Durumu, listItems, "Durum Seçiniz")
                                        @Html.ValidationMessage(property.PropertyName)
                                    </div>
                                    break;
                                case "BakimZamani":
                                    <div class="form-group">
                                        <label>@(property.DisplayName ?? property.PropertyName)</label>
                                        <br />
                                       
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control pull-right" id="datepicker" />
                                        </div>
                                        @*@Html.EditorFor(model => model.BakimZamani)*@
                                        @Html.ValidationMessage(property.PropertyName)
                                    </div>
                                    break;
                                default:
                                    <div class="form-group">
                                        <label>@(property.DisplayName ?? property.PropertyName)</label>

                                        @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                                        @Html.ValidationMessage(property.PropertyName)
                                    </div>
                                    break;
                            }
                        }
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}